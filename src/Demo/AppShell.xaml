<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DPMauiDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DPMauiDemo"

    Title="DPMauiDemo">

	<Shell.FlyoutHeader>
		<Label Margin="{OnPlatform Default='0,0,0,12',
                                   iOS='0',
                                   MacCatalyst='0'}"
               Padding="{OnPlatform Default='4,0',
                                    iOS='4, 100, 4, 0',
                                    MacCatalyst='4, 100, 4, 0'}"
               FontSize="24"
               HorizontalTextAlignment="Start"
               Text="Examples"
               VerticalTextAlignment="Center" />

	</Shell.FlyoutHeader>

	<FlyoutItem Title="Welcome"
                Route="WelcomePage"
                Icon="{OnPlatform Default='dotnet_bot.png', MacCatalyst={x:Null}}">
		<ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
	</FlyoutItem>



	<!--<ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />-->

</Shell>