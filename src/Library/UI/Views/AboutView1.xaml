<?xml version="1.0" encoding="utf-8" ?>
<dpui:PopupView
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:dpui="clr-namespace:DigitalProduction.UI"
	x:Class="DigitalProduction.UI.AboutView1"
	CanBeDismissedByTappingOutsideOfPopup="False">

	<!--<Frame StyleClass="PopupFrameStyle" MinimumWidthRequest="550">-->
	<Frame MinimumWidthRequest="550">

		<VerticalStackLayout StyleClass="VerticalLayoutStyle" >

			<!--<Label Text="{Binding Title}" x:Name="TitleLabel" StyleClass="Title" HorizontalOptions="Start"/>-->
			<Label Text="{Binding Title}" x:Name="TitleLabel" HorizontalOptions="Start"/>

			<Label Text="Author(s):"/>
			<Label Text="{Binding Authors}"/>

			<Label Text="Version:"/>
			<Label Text="{Binding Version}"/>

			<Label Text="Report issues:"/>
			<Label Text="{Binding IssuesAddress}"/>

		</VerticalStackLayout>
	</Frame>

</dpui:PopupView>